<h1> Edit Rating for <%= @subject.name %>: </h1>
<form action="/subjects/<%= @subject.id %>/ratings" method='POST'>
    <input type="hidden" id='hidden' name='_method' value="patch">
    <label for='score'>Score: </label><br>
    <% [5, 4, 3, 2, 1].each do |option| %>
        <input type="radio" name="rating[score]" id="score" value="<%= option %>" <%='checked' if @rating.score == option %>> <%= option %> </input> <br>
    <% end %> <br>
    <label for='review'>Review: </label><br><textarea name="rating[review]" rows="10" cols="50"> <%= @rating.review %> </textarea>
    <input type='submit' id='create' value="Edit Rating">
</form>