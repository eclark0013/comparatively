<h1> New Rating </h1>
<form action="/ratings" method='POST'>
    <label for='subject_name'>New subject name (or choose from unrated subjects below): </label> <input type='text' id='Artist Name' name='rating[subject_name]'> <br>
    <% @subjects.each do |subject| %>
        <input type="radio" name="rating[subject_name]" id="<%= subject.name %>" value="<%= subject.name %>"> <%= subject.name %> </input> <br>
    <% end %> <br>
    <% [5, 4, 3, 2, 1].each do |option| %>
        <input type="radio" name="rating[score]" id="score" value="<%= option %>"> <%= option %> </input> <br>
    <% end %> <br>
    <label for='review'>Review: </label><br><textarea name="rating[review]" rows="10" cols="50"></textarea>
    <input type='submit' id='create' value="Rate">
</form>
